# Application Configuration
APP_NAME=AgenticCloudServiceValidator
APP_ENV=development
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# GitHub Models Configuration (Free Tier for Development)
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_MODEL_ENDPOINT=https://models.github.ai/inference/
MODEL_NAME=openai/gpt-4.1-mini

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./validator.db
# For Production PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/validator_db

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_FROM=alerts@example.com
ALERT_EMAIL_TO=admin@example.com

# Slack Alerts (Optional)
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Validation Configuration
DEFAULT_VALIDATION_INTERVAL_MINUTES=60
MAX_CONCURRENT_VALIDATIONS=5
VALIDATION_TIMEOUT_SECONDS=300

# Anomaly Detection Thresholds
ANOMALY_THRESHOLD_PERCENTAGE=10.0
ANOMALY_ALERT_THRESHOLD=3
